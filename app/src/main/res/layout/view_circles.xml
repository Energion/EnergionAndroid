<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView
    android:id="@+id/view_circles_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginTop="4dp"
    android:textSize="22sp"
    android:textStyle="bold"
    tools:text="27.11"/>

  <LinearLayout
    android:id="@+id/view_circles_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="110dp"
    android:layout_marginTop="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/view_circles_circle_big"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/big_circle"/>

    <ImageView
      android:id="@+id/view_circles_circle_small_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:src="@drawable/small_circle"/>

    <ImageView
      android:id="@+id/view_circles_circle_small_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:src="@drawable/small_circle"/>

    <ImageView
      android:id="@+id/view_circles_circle_small_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:src="@drawable/small_circle"/>

    <ImageView
      android:id="@+id/view_circles_last_circle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:src="@drawable/big_circle"/>
  </LinearLayout>

  <TextView
    android:id="@+id/view_circles_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="4dp"
    android:layout_toEndOf="@id/view_circles_container"
    android:textSize="22sp"
    android:textStyle="bold"
    tools:text="18:00"/>

  <TextView
    android:id="@+id/view_circles_end_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="85dp"
    android:layout_toEndOf="@id/view_circles_container"
    android:textSize="22sp"
    android:textStyle="bold"
    android:text="00:00"/>

  <TextView
    android:id="@+id/view_circles_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="120dp"
    android:layout_marginTop="40dp"
    android:layout_toEndOf="@id/view_circles_container"
    android:textColor="@color/colorGoodPrice"
    android:textSize="24sp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/button_background"
    android:clickable="true"
    android:textStyle="bold"
    tools:text="23.33$"/>
</RelativeLayout>