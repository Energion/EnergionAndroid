<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Larger blue circle in back -->
  <item>
    <shape android:shape="oval">
      <stroke
        android:width="2dp"
        android:color="@color/colorDisabled"/>
      <size
        android:width="30dp"
        android:height="30dp"/>
    </shape>
  </item>
  <!-- Smaller red circle in front -->
  <item>
    <shape android:shape="oval">
      <stroke
        android:width="15dp"
        android:color="@android:color/transparent"/>
      <solid android:color="@color/colorDisabled"/>
      <size
        android:width="10dp"
        android:height="10dp"/>
    </shape>
  </item>
</layer-list>